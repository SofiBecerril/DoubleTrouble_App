<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_pixel_space"
    android:padding="24dp"
    tools:context=".MainMenuFragment">

    <ImageView
        android:id="@+id/starTopLeft"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/menu_star_decoration"
        android:src="@drawable/pixel_star"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/starTopRight"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="@string/menu_star_decoration"
        android:src="@drawable/pixel_star"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/menuImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/menu_logo_description"
        android:scaleType="fitCenter"
        android:src="@drawable/pixel_emblem_twins"
        app:layout_constraintBottom_toTopOf="@+id/menuTitle"
        app:layout_constraintDimensionRatio="44:28"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2" />

    <TextView
        android:id="@+id/menuTitle"
        style="@style/TextAppearance.Pixel.Title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingVertical="12dp"
        android:text="Double Trouble"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/menuImage" />

    <TextView
        android:id="@+id/menuSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="16dp"
        android:text="Dueto pixelado de talento y creatividad"
        android:textColor="@color/pixel_lavender"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/menuTitle" />

    <LinearLayout
        android:id="@+id/menuActions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="8dp"
        android:paddingTop="12dp"
        app:layout_constraintBottom_toTopOf="@+id/groundDecor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/menuSubtitle">

        <Button
            android:id="@+id/firstButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/pixel_button_selector"
            android:minHeight="56dp"
            android:padding="16dp"
            android:text="Elizabeth Becerril Pérez"
            android:textAllCaps="true"
            android:textColor="@color/pixel_glow"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/secondButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/pixel_button_selector"
            android:minHeight="56dp"
            android:padding="16dp"
            android:text="Sofía Becerril Pérez"
            android:textAllCaps="true"
            android:textColor="@color/pixel_glow"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/catsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/pixel_button_selector"
            android:minHeight="56dp"
            android:padding="16dp"
            android:text="@string/cats_screen_title"
            android:textAllCaps="true"
            android:textColor="@color/pixel_glow"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageView
        android:id="@+id/groundDecor"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:contentDescription="@string/menu_ground_decoration"
        android:scaleType="fitXY"
        android:src="@drawable/pixel_ground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
