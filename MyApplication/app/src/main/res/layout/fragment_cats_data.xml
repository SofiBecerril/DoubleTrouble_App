<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_pixel_space"
    android:padding="20dp">

    <ImageView
        android:id="@+id/catsStar"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:contentDescription="@string/menu_star_decoration"
        android:src="@drawable/pixel_star"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/catsTitle"
        style="@style/TextAppearance.Pixel.Title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingVertical="12dp"
        android:text="@string/cats_screen_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/catsStar" />

    <ScrollView
        android:id="@+id/contentScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/catsTitle">

        <LinearLayout
            android:id="@+id/contentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="8dp">

            <FrameLayout
                android:id="@+id/catImageFrame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/pixel_panel"
                android:minHeight="220dp"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/catImageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/cats_image_content"
                    android:scaleType="fitCenter"
                    android:src="@drawable/pixel_emblem_twins" />

                <TextView
                    android:id="@+id/catImagePlaceholder"
                    style="@style/TextAppearance.Pixel.Body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="=^._.^="
                    android:textColor="@color/pixel_lavender" />

            </FrameLayout>

            <TextView
                android:id="@+id/factTitle"
                style="@style/TextAppearance.Pixel.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:text="@string/cats_fact_title"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/factBody"
                style="@style/TextAppearance.Pixel.Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/pixel_panel"
                android:padding="24dp"
                android:text="..."
                android:textColor="@color/pixel_glow" />

        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/loadingIndicator"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:indeterminateTint="@color/pixel_salmon"
        android:indeterminateTintMode="src_in"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/catsTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>
