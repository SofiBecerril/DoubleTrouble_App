<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/pixel_cerulean</item>
        <item name="colorSecondary">@color/pixel_salmon</item>
        <item name="android:windowBackground">@color/pixel_midnight</item>
        <item name="android:statusBarColor">@color/pixel_shadow</item>
        <item name="android:navigationBarColor">@color/pixel_shadow</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textColorPrimary">@color/pixel_glow</item>
        <item name="android:textColorSecondary">@color/pixel_lavender</item>
    </style>

    <style name="Theme.MyApplication" parent="Base.Theme.MyApplication" />

    <style name="TextAppearance.Pixel.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textColor">@color/pixel_glow</item>
    </style>

    <style name="TextAppearance.Pixel.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:lineHeight">28sp</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textColor">@color/pixel_glow</item>
    </style>
</resources>