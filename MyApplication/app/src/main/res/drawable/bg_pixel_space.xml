<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/pixel_midnight" />
        </shape>
    </item>
    <item android:gravity="center">
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:endColor="#001A1A33"
                android:startColor="#33222649" />
        </shape>
    </item>
    <item android:gravity="fill">
        <shape android:shape="rectangle">
            <padding
                android:bottom="8dp"
                android:left="8dp"
                android:right="8dp"
                android:top="8dp" />
            <stroke
                android:width="2dp"
                android:color="#332E335C" />
        </shape>
    </item>
</layer-list>
